{
    "name": "List Helper",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./scripts/saveItem.js", "./scripts/editList.js"]
        }
    ],
    "browser_action": {
        "default_popup": "./html/mainpage.html",
        "default_title": "View and Manage Lists",
        "default_icon": "./images/icon.png"
    },
    "background": {
        "scripts": ["./scripts/background.js"]
    },
    "permissions": [
        "<all_urls>",
        "tabs"
    ]
}
